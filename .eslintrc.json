{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "eqeqeq": "error",
        "no-console": "warn",
        "prettier/prettier": "error",
        "no-unused-vars": "error",
        "no-var": "error"
    },
    "ignorePatterns": [
        "node_modules",
        "build",
        "dist",
        "public"
    ]
}
